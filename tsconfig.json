{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "outDir": "dist",
    "lib": ["DOM", "ES2023"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "preserveSymlinks": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
